<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    android:weightSum="1">
    <ListView
        android:id="@+id/foodorderlistview"
        android:layout_width="match_parent" android:layout_height="419dp"
        android:layout_weight="1">
    </ListView>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content">

        <TextView
            android:text="菜品总数" android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"

            android:id="@+id/foodordernum"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_width="100dp" android:layout_height="50dp" />
        <TextView
            android:text="订单总价"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimary"
            android:id="@+id/foodorderprice"
            android:layout_weight="1"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_width="100dp" android:layout_height="50dp" />
        </LinearLayout>
        <Button
            android:text="提交订单"
            android:id="@+id/foodordersubmit"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="100dp" android:layout_height="50dp" />

    </LinearLayout>
</LinearLayout>